@model Person
@{
    ViewBag.Title = "Details";
}

<h1>@Model.Name</h1>

@MovieList(Model.ActedMovies, "Spilt i")
@MovieList(Model.ProducedMovies, "Produsert")
@MovieList(Model.DirectedMovies, "Regisert")


@helper MovieList(IEnumerable<Movie> movies, string title)
{
    <h2>@title</h2>
    <ul>
        @foreach (var movie in movies)
        {
            <li>
                @Cover.Small(movie)
                @Html.ActionLink(movie.Title, "Details", "Movie", new { id = movie.MovieId }, null)
            </li>
        }
    </ul>
}

@section scripts{
    <script>

        $("ul").hide();

        $("h2").click(function () {
            $(this).next().slideDown(1000);
        });


    </script>
}

